@import './common/*';

body {
    min-height: 100%;
    display: flex;
    flex-direction: column;
}

header {
    border: 1px dashed black;
}

.head_menu {
    nav {
        border-bottom: 1px solid black;

        ul {
            list-style: none;
            overflow: hidden;
        }

        li {
            width: 140px;
            text-align: center;
            background-color: #333;
            float: left;
            height: 40px;
            line-height: 40px;
            marginLR(1px);

            a {
                text-decoration: none;
                color: #fff;
                font-weight: bold;
                padding: 20px;
            }
        }
    }
}

.main_container {
    flex: 1;
    min-height: 200px;
    background-color: #eee;
    text-align: center;
    marginTB(5px);
    border: 1px dashed black;
}

footer {
    height: 70px;
    text-align: center;
    background-color: #D2B48C;
    border: 1px dashed black;
}