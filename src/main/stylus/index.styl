@import './common/*';

/*
 * variables
 */
debugBorder(aColor) {
    // border: 2px solid aColor;
}

paddingLR(aSize) {
    padding-right: aSize;
    padding-left: aSize;
}

paddingTB(aSize) {
    padding-top: aSize;
    padding-bottom: aSize;
}

marginLR(aSize) {
    margin-left: aSize;
    margin-right: aSize;
}

marginTB(aSize) {
    margin-top: aSize;
    margin-bottom: aSize;
}

subBoxBase() {
    background: Wheat;
    box-shadow: -1px -1px 2px black;
}

.main_container {
    // height: 600px;
    paddingTB(2px);
    paddingLR(5px);
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    // align-items: center;
    border: 2px solid black;
    background-color: antiquewhite;
}

.play_field_container {
    width: 720px;
    padding: 6px;
    display: flex;
    flex-direction: column;
    margin-right: 2px;
    debugBorder(red);
}

.sample_field_container {
    paddingTB(2px);
    paddingLR(2px);
    display: flex;
    flex-direction: column;
    margin-left: 2px;
    debugBorder(red);
}

.game_controller_container {
    subBoxBase();
    height: 40px;
    min-width: 480px;
    float: left;
    margin-bottom: 2px;
    padding: 2px;
    display: table-cell;
    vertical-align: middle;
}

.goban_controller_container {
    subBoxBase();
    height: 40px;
    float: left;
    marginTB(3px);
    paddingLR(4px);
    paddingTB(4px);
}

.goban_container {
    subBoxBase();
    marginTB(3px);
    min-height: 512px;
    debugBorder(brown);
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.data_container {
    subBoxBase();
    // border: 2px solid black;
    min-height: 30px;
    paddingTB(2px);
    paddingLR(4px);
    marginTB(3px);

    input {
        width: 90%;
    }
}

.goban_area {
    width: 400px;
    height: 380px;
    position: relative;
    flex-grow: 1;
    paddingTB(10px);
    paddingLR(4px);
    debugBorder(green);
}

.play_option_area {
    flex-grow: 1;
    paddingTB(10px);
    paddingLR(4px);
    debugBorder(orange);
}

.play_controller {
    height: 50%;
    debugBorder(blue);
}

.turn_controller {
    padding-top: 2px;
    padding-bottom: 2px;
    width: 120px;
}

.turn_controller button {
    padding: auto;
    width: 45%;
}

.turn_controller img {
    width: 100%;
}

.goban_area canvas {
    position: absolute;
    margin: auto;
}

.btn_base {
    margin-top: 5px;
    margin-bottom: 5px;
    border-radius: 120px;
}

.btn_back {
    margin-top: 10px;
    margin-bottom: 10px;
}

.nextTurnRow {
    // width: 20px;
    height: 24px;
    debugBorder(black);
}

/* 汎用的なもの */
.radio_box {
    display: table-cell;
    overflow: hidden;
    box-shadow: 2px 2px 5px 1px rgb(112, 107, 107) inset;
    padding-top: 2px;
    padding-right: 4px;
    padding-left: 4px;
    padding-bottom: 2px;
    margin-left: 2px;
    margin-right: 2px;
    height: 30px;
}

.agehama_mode_area {
    display: flex;
    flex-direction: row;
    vertical-align: middle;
}

.agehama_swich_parts {
    display: table-cell;
}

.data_sync_container {
    display: inline-block;
}
